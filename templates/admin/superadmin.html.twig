{% extends 'admin/baseadmin.html.twig' %}

{% block content %}

<div class="admin-page">
        <div class="container">
            <div class="row">
                <div class="col s12">
                {#     <a href="{{ path('article_add') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a> #}
                    <h5>Produits</h5>
                    <table class="table table-primary">
                        <tr>
                            <th>#</th>
                            <th>Catégorie</th>
                            <th>Type</th>
                            <th>Fabriquant</th>
                            <th>Distributeur</th>
                            <th>Matière</th>
                        </tr>
                        {% set i = 1 %}
                        {% for produit in produits %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ produit.category }}</td>
                                <td>{{ produit.type }}</td>
                                <td>{{ produit.fabricant }}</td>
                                <td>{{ produit.distributeur }}</td>
                                <td>{{ produit.matiere }}</td>
                                <td>
{#                                     <a href="{{ path('article_edit', {'id': produit.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    <a href="{{ path('article_remove', {'id': produit.id}) }}"><i class="material-icons red-text">delete</i></a> #}
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <h5>Utilisateurs</h5>
                    <table class="table table-dark table-striped">
                        <tr>
                            <th>#</th>
                            <th>Adresse email</th>
                            <th>Nom</th>
                            <th>Mot de passe</th>
                            <th>Role</th>
                        </tr>
                        {% set i = 1 %}
                        {% for user in users %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.password }}</td>
                                <td>{{ user.role }}</td>
{#                                 <td>
                                    <a href=""><i class="material-icons red-text">Supprimer</i></a>
                                    <a href=""><i class="material-icons blue-text">Modifier</i></a>
                                </td> #}
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                {#     <a href="{{ path('article_add') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a> #}
                    <h5>Distributeur</h5>
                    <table class="table table-dark table-striped">
                        <tr>
                            <th>#</th>
                            <th>Marque</th>
                            <th>Siret</th>
                            <th>Ville</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                        </tr>
                        {% set i = 1 %}
                        {% for distributeur in distributeurs %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ distributeur.marque }}</td>
                                <td>{{ distributeur.siret }}</td>
                                <td>{{ distributeur.ville }}</td>
                                <td>{{ distributeur.email }}</td>
                                <td>{{ distributeur.telephone }}</td>
                                <td>
{#                                     <a href="{{ path('article_edit', {'id': distributeur.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    <a href="{{ path('article_remove', {'id': distributeur.id}) }}"><i class="material-icons red-text">delete</i></a> #}
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                {#     <a href="{{ path('article_add') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a> #}
                    <h5>Fabriquant</h5>
                    <table class="table table-dark ">
                        <tr>
                            <th>#</th>
                            <th>Marque</th>
                            <th>Siret</th>
                            <th>Ville</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                        </tr>
                        {% set i = 1 %}
                        {% for fabricant in fabricants %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ fabricant.marque }}</td>
                                <td>{{ fabricant.siret }}</td>
                                <td>{{ fabricant.ville }}</td>
                                <td>{{ fabricant.email }}</td>
                                <td>{{ fabricant.telephone }}</td>
                                <td>
                                    {# <a href="{{ path('article_edit', {'id': fabricant.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    <a href="{{ path('article_remove', {'id': fabricant.id}) }}"><i class="material-icons red-text">delete</i></a> #}
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

        </div>
    </div>

{% endblock %}